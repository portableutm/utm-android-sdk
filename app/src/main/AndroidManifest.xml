<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dronfies.portableutmandroidclienttest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PortableUTMAndroidClient"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SendPilotPositionActivity"
            android:exported="true" />
        <activity android:name=".EndpointsActivity" />
        <activity android:name=".OperationInfoActivity" />
        <activity android:name=".OperationsActivity" />
        <activity android:name=".VehicleInfo" />
        <activity android:name=".VehiclesActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>