<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddVehicleActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/design_default_color_primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <!--#################################### Date ####################################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
            <!--################################## N Number ##################################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N Number"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_text_n_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
            <!--################################# FAA Number #################################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAA Number"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_text_faa_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
            <!--################################ Vehicle Name ################################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Name"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_text_vehicle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
            <!--################################ Manufacturer ################################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manufacturer"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_text_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
            <!--################################### Model  ###################################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_text_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
            <!--############################### Vehicle Class  ###############################-->
            <!--##############################################################################-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Class"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_text_vehicle_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <!--################################ Extra Fields ################################-->
            <!--##############################################################################-->
            <LinearLayout
                android:id="@+id/linear_layout_extra_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extra Fields"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <!--################################# Add Button #################################-->
            <!--##############################################################################-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">
                <Button
                    android:id="@+id/button_add_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Vehicle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>